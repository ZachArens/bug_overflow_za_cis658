<%= form_with(model: user, local: true, id: 'userForm') do |form| %>
  <div id='errorMessage'></div>
  <% if user.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :fname, "First Name" %>
    <%= form.text_field :fname %>
  </div>

  <div class="form-group">
    <%= form.label :lname, "Last Name" %>
    <%= form.text_field :lname %>
  </div>

  <div class="form-group">
    <%= form.label :email, "Email" %>
    <%= form.text_field :email %>
  </div>

  <div class="form-group">
    <%= form.label :thumbnail, "Profile Image" %>
    <%= form.file_field :thumbnail, id: :user_thumbnail, class: "form-control-file" %>
  </div>

  <div class="actions">
    <%= form.submit data: {disable_with: false, class: "btn btn-primary"} %>
    <%= link_to 'Cancel', users_path, id: :submit_button, class: "btn btn-danger" %>
  </div>
<% end %>
